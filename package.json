{
  "name": "typing-manager",
  "main": "start/electron.js",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:react": "vite",
    "build:react": "tsc -b && vite build --out-dir build",
    "dev:electron": "concurrently \"cross-env NODE_ENV=development BROWSER=none yarn run dev:react\" \"yarn run electron\"",
    "build:electron": "yarn run build:core && yarn build:react && electron-builder",
    "build:core": "tsc ./start/*.ts --outdir start --module nodenext --target es6",
    "electron": "wait-on http://localhost:5173 && electron .",
    "test": "vitest --coverage --typecheck",
    "lint": "eslint ."
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.0.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^25.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "myledgerapp",
    "extends": null,
    "files": [
      "./build/**/*",
      "./start/electron.js"
    ],
    "includeSubNodeModules": "true"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
